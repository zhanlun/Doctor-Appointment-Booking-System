@model List<Appointment>
@{
    Layout = "_DoctorLayout";
    ViewData["Title"] = "View Appointment";
}
<div class="container table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Date Time</th>
                <th scope="col">Date Approved</th>
                <th scope="col">Patient Id</th>
                <th scope="col">Patient Name</th>
                <th scope="col">Condition Id</th>
                <th scope="col">Condition Name</th>
                <th scope="col">Approve</th>
            </tr>
        </thead>
        <tbody>

            @if (Model == null || Model.Count == 0)
            {
                <tr>
                    <td colspan="9" class="text-center">No data</td>
                </tr>
            }

            @if (Model != null)
                @for (int i = 0; i < Model.Count; i++)
                {
                    var appointment = Model[i];

                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@appointment.DateTime</td>
                        <td>@appointment.DateApproved</td>
                        <td>@appointment.PatientId</td>
                        <td>@appointment.Patient.Name</td>
                        <td>@appointment.ConditionId</td>
                        <td>@appointment.Condition.Name</td>

                        <td>
                            <a class="text-danger">
                                <span class="material-icons">
                                    create
                                </span>
                            </a>
                        </td>

                    </tr>

                }
        </tbody>
    </table>
</div>